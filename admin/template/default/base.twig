<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="/admin/template/default/assets/style.css">
        {% block additional_styles %}{% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-sm-4 col-md-3 col-lg-2 sidebar d-none d-sm-block" id="sidebar">
                    <a href="/admin"><img src="/admin/template/default/assets/logo.png" alt=""></a>
                    <nav>
                        <ul>
                            <li class="{% if active_page == 'dashboard' %}active{% endif %}"><a href="/admin"><i class="fa-solid fa-house"></i>Dashboard</a></li>
                            <li class="{% if active_page == 'news' %}active{% endif %}"><a href="/admin/news"><i class="fa-solid fa-newspaper"></i>News</a></li>
                            <li class="{% if active_page == 'accounts' %}active{% endif %}"><a href="/admin/accounts"><i class="fa-solid fa-user"></i>Account</a></li>
                            <li class="{% if active_page == 'plugins' %}active{% endif %}"><a href="/admin/plugins"><i class="fa-solid fa-plug"></i>Plugins (WIP)</a></li>
                            <li class="{% if active_page == 'themes' %}active{% endif %}"><a href="/admin/themes"><i class="fa-solid fa-palette"></i>Themes (WIP)</a></li>
                            <li class="{% if active_page == 'settings' %}active{% endif %}"><a href="/admin/settings"><i class="fa-solid fa-gear"></i>Settings</a></li>
                            <li class="d-xs-block d-sm-none" id="sidebarToggle"><a href="#"><i class="fa-solid fa-bars"></i>Exit</a></li>
                        </ul>
                    </nav>
                </div>
                <!-- Content -->
                <div class="col-12 col-sm-8 col-md-9 col-lg-10" id="content">
                    <!-- Topbar -->
                    <div class="row">
                        <div class="col-12 topbar">
                            <button class="btn mt-1 d-sm-none" type="button" id="sidebarCollapse">
                                <i class="fa-solid fa-bars"></i>
                            </button>
                            <a class="d-sm-none d-xs-block" href=""><img src="logo.png" alt=""></a>
                            <ol class="breadcrumb float-start mx-0 d-none d-md-flex">
                                {% for breadcrumb in breadcrumbs %}
                                    <li class="breadcrumb-item {% if loop.last %}active{% endif %}">
                                        {% if not loop.last %}
                                            <a href="{{ breadcrumb.url }}">{{ breadcrumb.title }}</a>
                                        {% else %}
                                            {{ breadcrumb.title }}
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ol>
                            <!--
                            <div class="float-end info">
                                <a href="/admin/notifications"><i class="fa-solid fa-bell"></i></a>
                                <a href="/admin/messages"><i class="fa-solid fa-envelope"></i></a>
                                <a href="/admin/profile"><i class="fa-solid fa-user"></i></a>
                            </div>
                            -->
                        </div>
                    </div>
                    <!-- Page Content -->
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/admin/template/default/assets/main.js"></script>
        {% block scripts %}{% endblock %}
    </body>
</html>