<!DOCTYPE html>
<html dir="ltr" lang="en">
	<head>
		<title>
			{% block title %}Heaven | Home
			{% endblock %}
		</title>
		<link
		rel="shortcut icon" href="assets/images/favicon.png"/>

		<!-- Responsive meta tag -->
		<meta
		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>

		<!-- Search engine related -->
		<meta name="keywords" content="{{ keywords|default('') }}"/>
		<meta name="description" content="{{ description|default('') }}"/>
		<meta
		http-equiv="Content-Type" content="text/html; charset=UTF-8"/>

		<!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
		<meta
		http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

		<!-- Address bar color -->
		<meta
		name="theme-color" content="#11192c"/>

		<!-- Load styles -->
		<link type="text/css" rel="stylesheet" href="templates/default/assets/css/style.css"/><!-- Ensure this path is correct -->

		<!-- Load scripts --><script type="text/javascript" src="templates/default/node_modules/jquery/dist/jquery.min.js"> </script>
		<script type="text/javascript" src="templates/default/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
		<script type="text/javascript" src="templates/default/node_modules/owl.carousel/dist/owl.carousel.min.js"></script>
		<script type="text/javascript" src="templates/default/assets/js/app.js"></script>

		{% block additional_head %}{% endblock %}
	</head>

	<body
		class="gb ltr theme-heaven version-1.0.0">
		<!-- Header.Start -->
		<header class="header" header>
			<div gradient gradient-1></div>
			<div gradient gradient-2></div>

			<div line line-l></div>
			<div line line-r></div>

			<div arrow></div>

			<div class="container-fluid">
				<div class="row">
					<div
						class="col-sm-12">
						<!-- Navbar.Start -->
						<nav
							class="navbar navbar-expand-xl">
							<!-- Brand.Start -->
							<a href="/home" class="navbar-brand" title="Heaven - Lineage II template">
								<img width="55" height="48" alt="logo" src="templates/default/assets/images/graphics/logo.png"/>
								<span class="text-ellipsis">
									<b>DonutCMS</b>
									<i>Content Management System</i>
								</span>
							</a>
							<!-- Brand.End -->

							<!-- Collapse.Start -->
							{# base.twig #}
								<div class="navbar-collapse collapse-primary collapse" collapse="navbar-primary"> <ul class="navbar-nav mx-auto">
									{% for item in navbar_items %}
										<li class="nav-item">
											<a href="{{ item.url }}" class="nav-link{% if item.is_active %} nav-active{% endif %}" title="{{ item.title }}">
												{{ item.label }}
											</a>
										</li>
									{% endfor %}
								</ul>
							</div>

							<div class="navbar-collapse collapse-secondary collapse">
								<ul class="navbar-nav ms-auto">
									{% if session.account_id %}
										<li class="nav-item dropdown">
											<a href="#" class="btn-blue -outline -noise text-ellipsis dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
												{{ session.username }}
											</a>
											<ul class="dropdown-menu" aria-labelledby="userDropdown">
												<li><a class="dropdown-item" href="/account">Account Settings</a></li>
												<li><a class="dropdown-item" href="/logout">Logout</a></li>
											</ul>
										</li>
									{% else %}
										<li class="nav-item">
											<a href="/login" class="btn-blue -outline -noise text-ellipsis" title="Login">Login</a>
										</li>
										<li class="nav-item ms-2">
											<a href="/register" class="btn-blue -outline -noise text-ellipsis" title="Register">Register</a>
										</li>
									{% endif %}
								</ul>
							</div>
							<!-- Collapse.End -->

							<!-- Toggler.Start -->
							<a href="javascript:void(0)" class="navbar-toggler" onclick="$('[collapse=navbar-primary]').stop(true, true).slideToggle('fast', function() { ($(this).is(':visible') ? $('.navbar-toggler').addClass('open') : $('.navbar-toggler').removeClass('open')) })">
								<span line line-t></span>
								<span line line-m></span>
								<span line line-b></span>
							</a>
							<!-- Toggler.End -->
						</nav>
						<!-- Navbar.End -->
					</div>
				</div>
			</div>
		</header>
		<!-- Header.End -->

		{% block content %}{% endblock %}

		<!-- Footer.Start -->
		<footer class="footer" footer>
			<div class="container">
				<div class="row g-5 align-items-center">
					<div class="col-lg-12 col-xl-6">
						<div class="footer-copyright">
							<span>
								<i>&copy;</i>
								COPYRIGHT
								<strong>WORLD OF WARCRAFT</strong>
							</span>
							Blizzard Entertainment is a trademark or registered trademark of Blizzard Entertainment, inc. In the US and/or other countries. All other trademarks or registered trademarks are property of their respective owners
																																																																																																		                        																																																																																																																																																																																																																								                        are property of their respective owners
						</div>

						<div class="footer-credits">
							POWERED BY:
							<span>DONUTCMS</span><br>
							FRONTEND CODED BY
							<span>E.DARKSIDER</span><br>
							DESIGN BY
							<span>VEINS</span>
						</div>
					</div>

					<div class="col-lg-12 col-xl-4">
						<nav class="footer-navbar">
							<ul class="navbar-nav">
								{% for item in navbar_items %}
									<li class="nav-item">
										<a href="{{ item.url }}" class="nav-link" title="{{ item.title }}">{{ item.title }}</a>
									</li>
								{% endfor %}
							</ul>


							<ul class="navbar-nav">
								{% for item in social_menu_items %}
									<li class="nav-item">
										<a href="{{ item.url }}" class="nav-link" title="{{ item.title }}">{{ item.title }}</a>
									</li>
								{% endfor %}
								<ul class="navbar-nav">
									{% for item in social_media_links %}
										<li class="nav-item">
											<a href="{{ item.url }}" class="nav-link" title="{{ item.title }}">{{ item.title }}</a>
										</li>
									{% endfor %}
								</ul>


							</nav>
						</div>

						<div
							class="col-lg-12 col-xl-2">
							<!-- Brand.Start -->
							<a href="/home" class="footer-brand" title="Heaven - Lineage II template">
								<img width="55" height="48" alt="logo" src="templates/default/assets/images/graphics/logo.png"/>
								<span class="text-ellipsis">
									<b>DonutCMS</b>
									<i>Content Management System</i>
								</span>
							</a>
							<!-- Brand.End -->
						</div>
					</div>
				</div>
			</footer>
			<!-- Footer.End -->

			{% block additional_scripts %}{% endblock %}
		</body>
	</body>
</html>
